<div class="library-app">
  <!-- Header -->
  <header class="header">
    <div class="container">
      <div class="header-content">
        <div class="logo-section">
          <svg class="logo-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2">
            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
          </svg>
          <h1 class="logo-text">{{ title }}</h1>
        </div>

        <div class="header-actions">
          <!-- User Info and Role Badge (when logged in) -->
          <div class="user-info" *ngIf="isLoggedIn()">
            <span class="role-badge" [class.admin-badge]="isAdmin()" [class.user-badge]="!isAdmin()">
              {{ isAdmin() ? 'ðŸ‘‘ Admin' : 'ðŸ‘¤ User' }}
            </span>
            <span class="username">{{ authService.getUsername() }}</span>
          </div>

          <!-- Theme Toggle -->
          <button class="btn-icon" (click)="toggleTheme()"
            [title]="isDarkMode ? 'Switch to Light Mode' : 'Switch to Dark Mode'">
            <svg *ngIf="!isDarkMode" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
            <svg *ngIf="isDarkMode" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="5"></circle>
              <line x1="12" y1="1" x2="12" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="23"></line>
              <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
              <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
              <line x1="1" y1="12" x2="3" y2="12"></line>
              <line x1="21" y1="12" x2="23" y2="12"></line>
              <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
              <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
          </button>

          <!-- Login/Logout Buttons -->
          <button class="btn-primary" (click)="openLoginDialog()" *ngIf="!isLoggedIn()">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
              stroke-width="2">
              <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
              <polyline points="10 17 15 12 10 7"></polyline>
              <line x1="15" y1="12" x2="3" y2="12"></line>
            </svg>
            <span>Login</span>
          </button>

          <!-- Add Book (Admin Only) -->
          <button class="btn-primary" (click)="toggleForm()" *ngIf="isAdmin()">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
              stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            <span>{{ showForm ? 'Cancel' : 'Add Book' }}</span>
          </button>

          <!-- Logout Button -->
          <button class="btn-secondary" (click)="handleLogout()" *ngIf="isLoggedIn()">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
              stroke-width="2">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
              <polyline points="16 17 21 12 16 7"></polyline>
              <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
            <span>Logout</span>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="main-content">
    <div class="container">

      <!-- Add/Edit Book Form (Admin Only) -->
      <div class="form-section" *ngIf="showForm && isAdmin()">
        <h2>{{ isEditing ? 'Edit Book' : 'Add New Book' }}</h2>

        <form (ngSubmit)="onSubmit()" class="book-form">
          <div class="form-row">
            <div class="form-group">
              <label for="title">Title *</label>
              <input type="text" id="title" [(ngModel)]="bookForm.title" name="title" placeholder="Enter book title"
                [class.error]="formErrors['title']">
              <span class="error-message" *ngIf="formErrors['title']">{{ formErrors['title'] }}</span>
            </div>

            <div class="form-group">
              <label for="author">Author *</label>
              <input type="text" id="author" [(ngModel)]="bookForm.author" name="author" placeholder="Enter author name"
                [class.error]="formErrors['author']">
              <span class="error-message" *ngIf="formErrors['author']">{{ formErrors['author'] }}</span>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="isbn">ISBN *</label>
              <input type="text" id="isbn" [(ngModel)]="bookForm.isbn" name="isbn"
                placeholder="XXX-X-XX-XXXXXX-X or 13 digits" [class.error]="formErrors['isbn']">
              <span class="error-message" *ngIf="formErrors['isbn']">{{ formErrors['isbn'] }}</span>
            </div>

            <div class="form-group">
              <label for="publishedYear">Published Year *</label>
              <input type="number" id="publishedYear" [(ngModel)]="bookForm.publishedYear" name="publishedYear"
                placeholder="YYYY" [class.error]="formErrors['publishedYear']">
              <span class="error-message" *ngIf="formErrors['publishedYear']">{{ formErrors['publishedYear'] }}</span>
            </div>

            <div class="form-group">
              <label for="genre">Genre *</label>
              <input type="text" id="genre" [(ngModel)]="bookForm.genre" name="genre"
                placeholder="e.g., Fiction, Science Fiction" [class.error]="formErrors['genre']">
              <span class="error-message" *ngIf="formErrors['genre']">{{ formErrors['genre'] }}</span>
            </div>
          </div>

          <div class="form-group">
            <label for="coverImage">Cover Image URL (Optional)</label>
            <input type="url" id="coverImage" [(ngModel)]="bookForm.coverImage" name="coverImage"
              placeholder="https://example.com/book-cover.jpg">
          </div>

          <div class="form-group">
            <label for="description">Description *</label>
            <textarea id="description" [(ngModel)]="bookForm.description" name="description"
              placeholder="Enter book description (min 10 characters)" rows="4"
              [class.error]="formErrors['description']"></textarea>
            <span class="error-message" *ngIf="formErrors['description']">{{ formErrors['description'] }}</span>
          </div>

          <div class="form-actions">
            <button type="button" class="btn-secondary" (click)="toggleForm()">Cancel</button>
            <button type="submit" class="btn-primary">
              {{ isEditing ? 'Update Book' : 'Add Book' }}
            </button>
          </div>
        </form>
      </div>

      <!-- Search and Filter Section -->
      <div class="search-section">
        <div class="search-bar">
          <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
          <input type="text" placeholder="Search by title, author, genre, or ISBN..." [(ngModel)]="searchQuery"
            (input)="onSearch()" class="search-input">
        </div>

        <div class="filter-group">
          <label for="genreFilter">Filter by Genre:</label>
          <select id="genreFilter" [(ngModel)]="selectedGenre" (change)="onFilterByGenre()" class="filter-select">
            <option value="all">All Genres</option>
            <option *ngFor="let genre of availableGenres" [value]="genre">{{ genre }}</option>
          </select>
        </div>

        <div class="results-count">
          <span class="count-badge">{{ filteredBooks.length }}</span>
          <span class="count-text">{{ filteredBooks.length === 1 ? 'book' : 'books' }} found</span>
        </div>
      </div>

      <!-- Books Grid -->
      <div class="books-grid" *ngIf="filteredBooks.length > 0">
        <div class="book-card" *ngFor="let book of filteredBooks">
          <div class="book-cover">
            <img [src]="getBookCover(book)" [alt]="book.title + ' cover'">
            <!-- Edit/Delete Overlay (Admin Only) -->
            <div class="book-overlay" *ngIf="isAdmin()">
              <button class="btn-icon-small" (click)="editBook(book)" title="Edit Book">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                  stroke-width="2">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
              </button>
              <button class="btn-icon-small btn-delete" (click)="deleteBook(book.id)" title="Delete Book">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                  stroke-width="2">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                </svg>
              </button>
            </div>
          </div>

          <div class="book-info">
            <h3 class="book-title">{{ book.title }}</h3>
            <p class="book-author">by {{ book.author }}</p>

            <div class="book-meta">
              <span class="meta-item">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                  stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                {{ book.publishedYear }}
              </span>

              <span class="meta-item genre-badge">{{ book.genre }}</span>
            </div>

            <p class="book-description">{{ book.description }}</p>

            <div class="book-isbn">
              <small>ISBN: {{ book.isbn }}</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Empty State -->
      <div class="empty-state" *ngIf="filteredBooks.length === 0">
        <svg class="empty-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
          stroke-width="2">
          <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
          <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
        </svg>
        <h3>No Books Found</h3>
        <p *ngIf="searchQuery || selectedGenre !== 'all'">
          Try adjusting your search or filter criteria
        </p>
        <p *ngIf="!searchQuery && selectedGenre === 'all'">
          Start building your library by adding your first book
        </p>
        <button class="btn-primary" (click)="toggleForm()" *ngIf="!showForm">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
            stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
          <span>Add Your First Book</span>
        </button>
      </div>

    </div>
  </main>

  <!-- Login Dialog Modal -->
  <div class="modal-overlay" *ngIf="showLoginDialog" (click)="closeLoginDialog()">
    <div class="modal-content" (click)="$event.stopPropagation()">
      <h2>Login to Library System</h2>

      <div class="login-hint">
        <p><strong>Admin Access:</strong> Username: <code>Admin</code>, Password: <code>admin@123</code></p>
        <p><strong>User Access:</strong> Any other username/password combination</p>
      </div>

      <form (ngSubmit)="handleLogin()" class="login-form">
        <div class="form-group">
          <label for="loginUsername">Username</label>
          <input type="text" id="loginUsername" [(ngModel)]="loginUsername" name="loginUsername"
            placeholder="Enter username" required autofocus>
        </div>

        <div class="form-group">
          <label for="loginPassword">Password</label>
          <input type="password" id="loginPassword" [(ngModel)]="loginPassword" name="loginPassword"
            placeholder="Enter password" required>
        </div>

        <div class="error-message" *ngIf="loginError">
          {{ loginError }}
        </div>

        <div class="login-actions">
          <button type="button" class="btn-secondary" (click)="closeLoginDialog()">Cancel</button>
          <button type="submit" class="btn-primary"
            [disabled]="!loginUsername.trim() || !loginPassword.trim()">Login</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <p>&copy; 2024 Library Management System. Built with Angular {{ title.split(' ').length > 0 ? '19' : '' }}</p>
    </div>
  </footer>
</div>